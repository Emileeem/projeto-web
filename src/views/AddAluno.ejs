    <!-- Cadastro Aluno/Professor -->
    <div class="form-signin formulario shadow position-absolute top-50 start-50 translate-middle p-2 mb-4 mt-4">


        <h2 class="text-center mt-4 mb-4">
            Cadastro novo Aluno
        </h2>

        <form class="row g-7" action="/addAluno" method="post" enctype="multipart/form-data">
            <div for="formFile" class="col-12 col-sm-6 col-md-4 w-100 mb-3 form-label foto">
                <img src="/img/usuario.png" class="fotousu" id="imgFoto">
                <input class="form-control eta" type="file" id="flImage" name="foto" accept="image/*">
            </div>


            <div class="col-12 col-sm-6 col-md-4 w-50 mb-4">
                <label class="form-label">EDV:</label>
                <input type="text" class="form-control" placeholder="EDV" required name="EDV">
            </div>

            <div class="col-12 col-sm-6 col-md-4 w-50 mb-4">
                <label class="form-label">Turma:</label>
                <select name="Turma" id="" class="form-control" required>
                    <option disabled selected> Selecione </option>
                    <% for (let i=0; i<turmas.length; i++) { %>
                        <option value='<%= turmas[i].IDTurma %>'>
                            <%= turmas[i].Nome %>
                        </option>
                        <% } %>
                </select>
            </div>

            <div class="col-12 col-sm-6 col-md-4 w-50 mb-4">
                <label class="form-label">Nome Completo:</label>
                <input type="text" class="form-control" placeholder="Nome" required name="Nome">
            </div>

            <div class="col-12 col-sm-6 col-md-4 w-50 mb-4">
                <label class="form-label">Senha:</label>
                <input type="password" class="form-control" placeholder="Senha" required name="Senha">
            </div>

            <div class="col-12 w-100 col-md-4 butao mb-4">
                <input class="btn btn-primary w-100" type="submit" value="Cadastrar">
            </div>
        </form>

        <a href="#" class="volta">
            <span>
                <i class="material-symbols-outlined voltar1">undo</i>
                <span class="voltar">Voltar</span>
            </span>
        </a>
