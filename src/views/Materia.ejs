<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Matérias</title>
    <!-- CSS -->
    <link rel="stylesheet" href="/css/materia.css">
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
        crossorigin="anonymous"></script>
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300&display=swap" rel="stylesheet">
    <!-- Google Simbols -->
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />

</head>

<body>
    <!-- Header -->
    <div class="linha"> </div>
    <header>
        <nav class="navbar shadow bg-body-tertiary">
            <div class="container-fluid emyli">
                <a class="navbar-brand" href="#">
                    <img src="/img/logo_ets.png" alt="logo-ets" class="logo-inside">
                </a>
            </div>
        </nav>
    </header>
    <!-- -------- -->
        <!-- Menu com click -->

        <aside class="sidebar shadow">
            <header class="sidebarheader">
                <img class="logo-img" src="/img/<%= session.foto %>" alt="foto do usuario">
            </header>
            <span class="edv2">
                <i class="material-symbols-outlined"> badge </i>
                <span><b class="edv">EDV: <%= session.edv %> </b></span>
            </span>
            <nav>
                <form action="/home" method="get">
                    <button>
                        <span>
                            <i class="material-symbols-outlined"> home </i>
                            <span>Início</span>
                        </span>
                    </button>
                </form>
                <button>
                    <span>
                        <i class="material-symbols-outlined"> calendar_month </i>
                        <span>Calendário</span>
                    </span>
                </button>
                <form action="/logout" method="get">
                    <button>
                        <span>
                            <i class="material-symbols-outlined"> Logout </i>
                            <span>Sair</span>
                        </span>
                    </button>
                </form>
            </nav>
    
        </aside>
        <!-- Menu p celular -->
        <button class="button-mobile" onclick="toggleMenu()">
            <i class="material-symbols-outlined"> menu </i>
            <span><b class="">Menu</b></span>
        </button>
    
        <nav class="menu-mobile" id="menu-mobile">
            <button class="close" onclick="toggleMenu()">
                <span>
                    <i class="material-symbols-outlined"> close </i>
                </span>
            </button>
    
            <form action="/home" method="get">
                <button>
                    <span>
                        <i class="material-symbols-outlined"> home </i>
                        <span>Início</span>
                    </span>
                </button>
            </form>
    
            <button>
                <span>
                    <i class="material-symbols-outlined"> calendar_month </i>
                    <span class="mobile-text">Calendário</span>
                </span>
            </button>
    
            <form action="/logout" method="get">
                <button>
                    <span>
                        <i class="material-symbols-outlined"> Logout </i>
                        <span>Sair</span>
                    </span>
                </button>
            </form>
        </nav>

    <!-- Main -->
    <main class="main">
        <div class="all-things">
            <!--Título da matéria -->
            <div class="nome-mat w-100 text-center mt-5 mb-5 shadow mb-3">
                <%= Materia.Nome %>
            </div>

            <div class="media-turma mt-4 mb-4">
                A sua média Geral é:
            </div>
            <div class="all mt-4">
                <div class="body">
                    <div class="skill">
                        <div class="fora">
                            <div class="dentro">
                                <div id="number">
                                    99%
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Competencias -->
            <div class="competencias">
                <p class="title-media text-start mt-4">Competências:</p>
                <table class="table border align-middle table-striped-columns">
                    <thead>
                        <tr>
                            <th scope="col">PESO</th>
                            <th scope="col">COMPETÊNCIAS</th>
                            <th scope="col">SITUAÇÃO</th>
                        </tr>
                    </thead>
                    <tbody>
                      
                        <tr>
                            <th scope="row">
                              
                            </th>
                            <td>
                              
                            </td>
                            <td>
                                
                            </td>
                        </tr>
                                               
                    </tbody>
                </table>
                <!-- arquivos -->
                <p class="title-media mt-4 mb-4">Arquivos disponibilzados:</p>
                <table class="table border align-middle table-striped-columns">
                    <tbody>
                        <% for( let i=0; i < Arquivos.length; i++ ) { %>
                            <tr>
                                <th class="file-name">
                                    <%= Arquivos[i].Nome %>
                                </th>
                                <td class="d-flex justify-content-center"><button class="dowload-button"
                                        id="btnDownload" download href="<%= Arquivos[i].Caminho %>"><img
                                            class="icon-dowload" src="/img/dowload.png" alt=""></button></td>
                            </tr>
                            <% } %>
                                <!-- <tr>
                                    <th class="file-name">Figura Paterna.jfif</th>
                                    <td class="d-flex justify-content-center"><button class="dowload-button"
                                            id="btnDownload" download href="/img/rainbow.svg"><img class="icon-dowload"
                                                src="/img/dowload.png" alt=""></button></td>
                                </tr> -->
                    </tbody>
                </table>
            </div>
        </div>
    </main>
    <!-- -------- -->

    <script src="/js/home.js"></script>
</body>

</html>