<!DOCTYPE html>
<html lang="PT-BR">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Adicionar Matéria</title>

    <!-- Boostrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
        crossorigin="anonymous"></script>

    <!-- Google Simbols -->
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />

    <!-- Css -->
    <link rel="stylesheet" href="/css/addmat.css">

    <!-- Fontes -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@500&display=swap" rel="stylesheet">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&family=Oswald:wght@500&display=swap"
        rel="stylesheet">

</head>

<body>
    <!-- Cabeçalho -->
    <div class="linha"> .</div>
    <header class="border-bottom bg-body-secondary eta">
        <div class="dash">
            <b>Dashboard</b>
            <a href="#" class="sair">
                <i class="material-symbols-outlined m-2"> Logout </i>
            </a>
        </div>
    </header>

    <nav class="navbar shadow bg-body-tertiary mt-2">
        <div class="container-fluid">
            <a class="cabeca navbar-brand" href="#">
                <img src="/img/logo_ets.png" alt="logo bosch-ets" class="etslogo">
            </a>
        </div>
    </nav>
    <!-- -------- -->


    <!-- Menu com click -->

    <aside class="sidebar shadow">
        <header class="sidebarheader">
            <img class="logo-img" src="/img/<%= session.foto %>" alt="foto do usuario">
        </header>
        <span class="edv2">
            <i class="material-symbols-outlined"> badge </i>
            <span><b class="edv">EDV:<%= session.edv %></b></span>
        </span>
        <nav>
            <form action="/homeprof" method="get">
                <button>
                    <span>
                        <i class="material-symbols-outlined"> home </i>
                        <span>Início</span>
                    </span>
                </button>
            </form>
            <form action="/calendarioProf/<%= session.edv %>" method="get">
                <button>
                    <span>
                        <i class="material-symbols-outlined"> calendar_month </i>
                        <span>Calendário</span>
                    </span>
                </button>
            </form>

            <form action="/addAluno" method="get">
                <button>
                    <span>
                        <i class="material-symbols-outlined"> school </i>
                        <span>Adicionar Aluno</span>
                    </span>
                </button>
            </form>
            <form action="/addProf" method="get">
                <button>
                    <span>
                        <i class="material-symbols-outlined"> person_add </i>
                        <span>Adicionar Instrutor</span>
                    </span>
                </button>
            </form>

            <form action="/addTurma" method="get">
                <button>
                    <span>
                        <i class="material-symbols-outlined"> group_add </i>
                        <span>Adicionar Nova Turma</span>
                    </span>
                </button>
            </form>

            <form action="/logout" method="get">
                <button>
                    <span>
                        <i class="material-symbols-outlined"> Logout </i>
                        <span>Sair</span>
                    </span>
                </button>
            </form>
        </nav>

    </aside>
    <!-- Menu p celular -->
    <button class="button-mobile" onclick="toggleMenu()">
        <i class="material-symbols-outlined"> menu </i>
        <span><b class="">Menu</b></span>
    </button>

    <nav class="menu-mobile" id="menu-mobile">
        <button class="close" onclick="toggleMenu()">
            <span>
                <i class="material-symbols-outlined"> close </i>
            </span>
        </button>

        <form action="/homeprof" method="get">
            <button>
                <span>
                    <i class="material-symbols-outlined"> home </i>
                    <span class="mobile-text">Início</span>
                </span>
            </button>
        </form>

        <button>
            <span>
                <i class="material-symbols-outlined"> calendar_month </i>
                <span class="mobile-text">Calendário</span>
            </span>
        </button>

        <form action="/addAluno" method="get">
            <button>
                <span>
                    <i class="material-symbols-outlined"> school </i>
                    <span class="mobile-text">Adicionar Aluno</span>
                </span>
            </button>
        </form>

        <form action="/addProf" method="get">
            <button>
                <span>
                    <i class="material-symbols-outlined"> person_add </i>
                    <span class="mobile-text">Adicionar Instrutor</span>
                </span>
            </button>
        </form>
        <form action="/addTurma" method="get">
            <button>
                <span>
                    <i class="material-symbols-outlined"> group_add </i>
                    <span class="mobile-text">Adicionar Turma</span>
                </span>
            </button>
        </form>
        <button>
            <span>
                <i class="material-symbols-outlined"> Logout </i>
                <span class="mobile-text">Sair</span>
            </span>
        </button>
    </nav>

    <main class="main">
        <!-- Cadastro Matéria -->
        <div class="form-signin mt-5 formulario border-transparent shadow p-2  mb-4">


            <h2 class="text-center mt-4 mb-4">
                Criando nova Matéria
            </h2>

            <form class="row g-7" action="/addMateria" method="post">
                <div class="col-12 col-sm-6 col-md-4 w-100 mb-4">
                    <label class="form-label">Nome</label>
                    <input type="text" class="form-control" placeholder="Título" name="NomeTurma" required>
                </div>

                <div class="col-12 col-sm-6 col-md-4 w-100 mb-3">
                    <label class="form-label">Turma:</label>
                    <select name="Turma" id="" class="form-control" required>
                        <option disabled selected> Selecione </option>
                        <% for (let i=0; i<turmas.length; i++) { %>
                            <option value='<%=turmas[i].IDTurma%>'>
                                <%= turmas[i].Nome %>
                            </option>
                            <% } %>
                    </select>
                </div>

                <!-- Cadastro Competências -->
                <div class="competencias mt-5  p-4 mb-3 row g-7">

                    <h2 class="text-center mt-4 mb-4 ">
                        Competências da Matéria
                    </h2>

                    <div class="col-12 col-sm-6 col-md-4 w-50 mb-4">
                        <label class="form-label">Nome:</label>
                        <input type="text" class="form-control" placeholder="Nome" name="Nome" required>
                    </div>

                    <div class="col-12 col-sm-6 col-md-4 w-50 mb-4">
                        <label class="form-label">Peso:</label>
                        <input type="number" class="form-control" placeholder="Peso" name="Peso" required>
                    </div>

                    <div id="input" class="row g-7"></div>

                    <button class="add mb-3" id="adicionar">
                        <span>
                            <abbr title="Adicionar Competência circle"> <i class="material-symbols-outlined ">
                                    add_circle </i>
                            </abbr>
                        </span>
                    </button>
                    <div class="col-12 col-md-4 butao w-100 mb-4">
                        <input class="btn btn-primary w-100" type="submit" value="Enviar">
                    </div>

                    <a href="#" class="volta">
                        <span>
                            <i class="material-symbols-outlined voltar1">undo</i>
                            <span class="voltar">Voltar</span>
                        </span>
                    </a>
            </form>
        </div>
        </div>

        
    </main>
    <script src="/js/menu.js"></script>
    <script src="/js/comp.js"></script>
</body>

</html>